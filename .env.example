# Owner account (REQUIRED)
OWNER_USERNAME=admin
OWNER_PASSWORD=your-secure-password-here

# JWT Secret (recommended to set in production)
JWT_SECRET=your-random-secret-key-here

# JWT token expiration (default: 24h)
JWT_EXPIRES=24h

# Server settings
PORT=3000
HOST=0.0.0.0

# Database paths (default: ./data/)
USERS_DB_PATH=./data/users.db
SECURITY_DB_PATH=./data/security.db
LOGS_DB_PATH=./data/logs.db
